// src/view/common/Event/MovieCard.tsx
import { useDispatch } from 'react-redux';
import { addBookingToCart } from '../../../slices/bookingCartSlice';
import { useState } from 'react';
import type { MovieData } from '../../../models/MovieData';

interface MovieCardProps {
    data: MovieData;
}

export function MovieCard({ data }: MovieCardProps) {
    const dispatch = useDispatch();
    const [showBookingModal, setShowBookingModal] = useState(false);

    const handleAddToCart = () => {
        dispatch(addBookingToCart(data));
        setShowBookingModal(true);
    };

    return (
        <div className="max-w-sm rounded-lg overflow-hidden shadow-lg bg-gray-800 transition-transform hover:scale-105">
            <img
                className="w-full h-64 object-cover"
                src={data.image}
                alt={data.title}
            />
            <div className="px-6 py-4">
                <h3 className="font-bold text-xl mb-2 text-white">{data.title}</h3>
                <p className="text-gray-300 text-base mb-4">{data.description}</p>
                <div className="flex justify-between items-center">
                    <span className="text-green-400 font-bold">${data.price}</span>
                    <button
                        onClick={handleAddToCart}
                        className="bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded-full transition duration-300"
                    >
                        Add Ticket
                    </button>
                </div>
            </div>

            {showBookingModal && (
                <div className="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
                    <div className="bg-gray-800 p-6 rounded-lg max-w-md w-full">
                        <h2 className="text-2xl font-bold text-white mb-4">Booking Details</h2>
                        <div className="text-gray-300 mb-4">
                            <p>Movie: {data.title}</p>
                            <p>Price per ticket: ${data.price}</p>
                        </div>
                        <div className="flex justify-end space-x-4">
                            <button
                                onClick={() => setShowBookingModal(false)}
                                className="px-4 py-2 bg-gray-600 text-white rounded hover:bg-gray-700"
                            >
                                Close
                            </button>
                            <button
                                onClick={() => {
                                    setShowBookingModal(false);
                                    window.location.href = '/booking';
                                }}
                                className="px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700"
                            >
                                Proceed to Checkout
                            </button>
                        </div>
                    </div>
                </div>
            )}
        </div>
    );
}